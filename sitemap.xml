---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
    xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {%
        assign latest_date_modified = site.posts
        | where_exp: "post", "post.date_modified"
        | map: "date_modified"
        | sort
        | last
    %}
    <url>
        <loc>https://lilyroger.com/</loc>
        <lastmod>{{ latest_date_modified | date: "%Y-%m-%d" }}</lastmod>
        <changefreq>weekly</changefreq>
    </url>

    <!-- The page of the trips collection -->
    <url>
        <loc>https://lilyroger.com/trips/</loc>
        <lastmod>{{ latest_date_modified | date: "%Y-%m-%d" }}</lastmod>
        <changefreq>weekly</changefreq>
    </url>

    <!-- The page of the items in the trips collection -->
    {%- assign items = site.trips | reverse -%}
    {% for item in items %}
    <url>
        <loc>https://lilyroger.com{{ item.url }}</loc>
        <lastmod>
        {%- if item.modified_time -%}
        {{ item.modified_time | date: "%Y-%m-%d" }}
        {%- else -%}
        {{ item.date | date: "%Y-%m-%d" }}
        {%- endif -%}
        </lastmod>
        <changefreq>monthly</changefreq>
    </url>
    {% endfor %}

    <!-- The page of the detinations collection -->
    {%- assign target = site.pages | find_exp: "p", "p.path == '_pages/destinations.md'" -%}
    <url>
        <loc>https://lilyroger.com/destinations/</loc>
        <lastmod>{{ target.date_modified | date: "%Y-%m-%d" }}</lastmod>
        <changefreq>weekly</changefreq>
    </url>

    <!-- The pages of the items in the detinations collection -->
    {%- assign items = site.destinations -%}
    {% for item in items %}
    <url>
        <loc>https://lilyroger.com{{ item.url }}</loc>
        <lastmod>
        {%- if item.modified_time -%}
        {{ item.modified_time | date: "%Y-%m-%d" }}
        {%- else -%}
        {{ item.date | date: "%Y-%m-%d" }}
        {%- endif -%}
        </lastmod>
        <changefreq>monthly</changefreq>
    </url>
    {% endfor %}

    <!-- The page of all posts -->
    <url>
        <loc>https://lilyroger.com/posts/</loc>
        <lastmod>{{ latest_date_modified | date: "%Y-%m-%d" }}</lastmod>
        <changefreq>weekly</changefreq>
    </url>

    <!-- The posts -->
    {% for post in site.posts %}
    <url>
        <loc>https://lilyroger.com{{ post.url }}</loc>
        <lastmod>
        {%- if post.modified_time -%}
        {{ post.modified_time | date: "%Y-%m-%d" }}
        {%- else -%}
        {{ post.date | date: "%Y-%m-%d" }}
        {%- endif -%}
        </lastmod>
        <changefreq>monthly</changefreq>
    </url>
    {% endfor %}

</urlset>